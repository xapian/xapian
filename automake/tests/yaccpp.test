# Test to make sure yacc + c++ works.

. ./defs || exit 1

set -e

cat >> configure.in << 'END'
AC_PROG_CXX
AC_PROG_YACC
END

cat > Makefile.am << 'END'
bin_PROGRAMS = zardoz
zardoz_SOURCES = zardoz.yy
END

$ACLOCAL
$AUTOMAKE -a

grep zardoz.cc Makefile.in
