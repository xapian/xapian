use strict;
use exception_data;

my @allclasses = (@baseclasses, @classes);

open FD, ">except.i" or die $!;

$copyright =~ s/^/ */mg;

print FD <<"EOF";
/** \@file lua/except.i
 * \@brief Custom Lua exception handling.
 */
/* Warning: This file is generated by $0
 * - do not modify directly!
 *
$copyright */

%include "xapian/error.h"

%{
namespace Xapian {
void handle_exception(lua_State* L) {
    try {
	throw;
EOF

for (reverse @allclasses) {
    my ($class) = @{$_};
    print FD <<"EOF";
    } catch (const Xapian::$class &e) {
	SWIG_NewPointerObj(L, (void *)new $class(e), SWIGTYPE_p_Xapian__$class, 1);
EOF
}

print FD <<'EOF';
    } catch (const std::exception& e) {
	lua_pushfstring(L, "std::exception: %s", e.what());
    } catch (...) {
	lua_pushstring(L, "Unknown exception");
    }
}
}
%}

/* Functions and methods which are marked as "nothrow": */
EOF

chdir($INC[0]);
exception_data::for_each_nothrow(sub { print FD "%exception $_[0];\n" });

print FD <<'EOF';

%exception {
    try {
	$action
    } catch (...) {
	Xapian::handle_exception(L);
	SWIG_fail;
    }
}
EOF

close FD or die $!;
